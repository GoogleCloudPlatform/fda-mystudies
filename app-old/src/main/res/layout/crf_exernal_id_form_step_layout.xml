<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rsb_form_step_content_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/deepGreen"
    android:paddingTop="60dp"
    android:paddingBottom="@dimen/rsb_padding_large">

    <TextView
        android:id="@+id/rsb_form_step_title"
        style="@style/TextAppearance.Crf.CompletionHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:gravity="center"
        android:textColor="@color/white"
        android:text="@string/crf_external_id_title"/>

    <RelativeLayout
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/rsb_form_step_title"
        android:layout_centerHorizontal="true">

        <LinearLayout
            android:id="@+id/rsb_form_step_body_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"/>

    </RelativeLayout>

    <Button
        style="@style/Crf.WhiteDeepGreen.RoundedCornerMaterialButton"
        android:id="@+id/button_go_forward"
        android:layout_width="match_parent"
        android:layout_height="@dimen/crf_rounded_button_height"
        android:layout_margin="@dimen/rsb_padding_large"
        android:focusable="true"
        android:text="@string/rsb_BUTTON_NEXT"
        android:layout_alignParentBottom="true"
        android:textAllCaps="false"/>

</RelativeLayout>