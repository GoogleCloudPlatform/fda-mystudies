<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="match_parent">

  <org.researchstack.backbone.ui.views.ObservableScrollView
    android:id="@+id/rsb_content_container_scrollview"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_above="@+id/rsb_submit_bar">

    <LinearLayout
      android:id="@+id/rsb_content_container"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="vertical">

    </LinearLayout>

  </org.researchstack.backbone.ui.views.ObservableScrollView>

  <org.researchstack.backbone.ui.views.SubmitBar
    android:id="@+id/rsb_submit_bar"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true" />

</RelativeLayout>