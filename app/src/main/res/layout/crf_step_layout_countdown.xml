<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/crf_root_instruction_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        style="@style/TextAppearance.Crf.SubHeader"
        android:id="@+id/crf_countdown_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textColor="@color/black54"
        android:paddingTop="?attr/actionBarSize"
        android:gravity="center_horizontal"
        android:layout_margin="@dimen/rsb_padding_large"/>

    <TextView
        style="@style/TextAppearance.Crf.Countdown"
        android:id="@+id/crf_countdown_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/crf_countdown_title"
        android:layout_centerHorizontal="true"
        android:textColor="@color/deepGreen"
        android:gravity="center_horizontal"
        android:layout_marginTop="60dp"/>

    <Button
        style="@style/Widget.AppCompat.Button.Borderless"
        android:id="@+id/crf_pause_resume_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/rsb_padding_medium"
        android:text="@string/crf_underlined_pause"
        android:textColor="@color/azure"
        android:textAllCaps="false"/>

</RelativeLayout>