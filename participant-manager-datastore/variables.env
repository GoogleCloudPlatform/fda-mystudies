# Application properties configuration for `Participant manager` datastore
# These environment variables are used by the application.properties file to configure deployment behavior

# Path to the directory within the container where this application will write log files.
# Example value below.
LOG_PATH=/logs

# Base URL of your `Participant manager` instance
# For example, http://10.128.0.10 
PARTICIPANT_MANAGER_BASE_URL=

# The name of the Google Cloud Storage bucket created during `Participant datastore` deployment
# For example, mystudies-consent-bucket
GCP_BUCKET_NAME=

# The display name of the deploying organization
# For example, ‘Sincerely, the <<org_name>> support team’
ORG_NAME=

# URL of the `Participant datastore` database that you created during `Participant datastore` deployment
# For example, 10.112.224.10
DB_INSTANCE_URL=

# Name of the `Participant datastore` database that you created with the sql script during `Participant datastore` deployment
# Default value is `mystudies_participant_datastore`
DB_NAME=mystudies_participant_datastore

# Username of the account that you created for the database
DB_USER=

# Password of the account that you created for the database
DB_PASS=

# The address of the SMTP server that the platform will use to send emails
# Example value below
SMTP_HOSTNAME=smtp.gmail.com

# Username of the SMTP account that the platform will use to send emails
# For example, my-studies@gmail.com
MAIL_USERNAME=

# Password of the SMTP account that the platform will use to send emails
MAIL_PASSWORD=

# The contact email address presented to users
# For example, my-studies@gmail.com
MAIL_CONTACT_EMAIL=

# The return email address for messages sent by the platform
# For example, my-studies@gmail.com
MAIL_FROM_EMAIL=

# `Client id` that you set in your Hydra instance for the `Participant manager datastore`
# See Hydra documentation for more information. 
CLIENT_ID=
 
# `Client secret` that you set in your Hydra instance for the `Participant manager datastore`
# See Hydra documentation for more information.
SECRET_KEY=

# The administrative URL of your Hydra instance. Typically configured on port 4445
# For example, https://10.128.0.2:4445
HYDRA_ADMIN_URL=

# URL of your `Auth server` instance, including context-path value (e.g. /auth-server)
# For example value, https://10.128.0.3/auth-server
SCIM_AUTH_URL=

# Domains that the `Participant manager datastore` will trust for cross-origin resource sharing
# Set this value to your `Participant manager` instance if your `Participant Manager`
# and `Participant manager datastore` have unique domains (e.g. you are using IP addresses)
# For example, http://10.128.0.10
# Leave empty if not required
CORS_ALLOWED_ORIGINS=
